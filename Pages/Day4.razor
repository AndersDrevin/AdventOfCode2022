@page "/day4"
@using AdventOfCode2022.Data
@inject DayInputService DayInputService

<PageTitle>Day4</PageTitle>

<h1>Day4</h1>

<button class="btn btn-primary" @onclick="Day4_1">Räkna 4_1</button>
<p>Resultat dag 4_1 = @day4_1Result</p>
<hr />
<button class="btn btn-primary" @onclick="Day4_2">Räkna 4_2</button>
<p>Resultat dag 4_2 = @day4_2Result</p>


@code{
    private int day4_1Result = 0;
    private int day4_2Result = 0;

    private void Day4_1(){
        day4_1Result = DayInputService.Day4_1();
    }
    private void Day4_2(){
        day4_2Result = DayInputService.Day4_2();
    }
}